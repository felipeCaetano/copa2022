#: import Convocados baseclass.grupoa.team1.convocados

<Catar>:
    MDFloatLayout:
        MDSpinner:
            size_hint: None, None
            size: dp(48), dp(48)
            pos_hint: {'center_x': .5, 'center_y': .5}
            determinate: True

    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y:None
            height:dp(150)
            padding:dp(5), dp(80), dp(0), dp(5)
            MDBoxLayout:
                height:dp(70)
                spacing: 15
                FitImage:
                    source: root.flag
                    size_hint: None, None
                    height:dp(64)
                    width: dp(64)
                MDLabel:
                    text: root.team_name
                    pos_hint: {'center_x': .5, 'center_y': .8}
                    font_style: "Button"
                    parent_background: 0,0,1
            MDLabel:
                text: "Treinador: " + root.treinador
                pos_hint: {'center_x': .5, 'center_y': .7}
                font_style: "Body2"
        MDBoxLayout:
            orientation: 'vertical'
            ScrollView:
                MDGridLayout:
                    id: box
                    cols: 1
                    adaptive_height: True
