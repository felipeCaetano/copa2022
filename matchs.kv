<Matchs>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        padding: 0, "60dp", 0, 0

        ScrollView:
            scroll_timeout : 100

            MDList:
                id: md_list
                padding: 0, "30dp", 0, "30dp"
                spacing: 50

                MDCard:
                    orientation: "vertical"
                    size_hint: .5, None
                    height: box_top.height + box_bottom.height
                    focus_behavior: True
                    ripple_behavior: True
                    pos_hint: {"center_x": .5, "center_y": .5}

                    MDBoxLayout:
                        id: box_top
                        adaptive_height: True
                        padding: "10dp", "50dp", 0, "10dp"

                        MDLabel:
                            text: "Grupo A - 21/11 13h"
                            adaptive_height: True
                            pos_hint: {"center_y": .5}
                            theme_text_color: "Primary"

                    MDSeparator:

                    MDBoxLayout:
                        id: box_middle
                        spacing: "20dp"
                        adaptive_height: True

                        FitImage:
                            source: "assets/images/GrupoA/catar/catar.png"
                            size_hint: None, None
                            width: dp(64)
                            height: dp(64) #text_box.height
                        MDLabel:
                            text: "0"
                        MDLabel:
                            text: "X"
                            font_size: "15"
                            bold: True
                        MDLabel:
                            text: "0"
                        FitImage:
                            source: "assets/images/GrupoA/equador/equador.png"
                            size_hint: None, None
                            width: dp(64)
                            height: dp(64) #text_box.height

                    MDSeparator:

                    MDBoxLayout:
                        id: box_bottom
                        adaptive_height: True
                        padding: "10dp", 0, 0, 0

                        MDLabel:
                            text: "Al Bayt Stadium"
                            adaptive_height: True
                            pos_hint: {"center_y": .5}
                            theme_text_color: "Primary"

                MDCard:
                    orientation: "vertical"
                    size_hint: .5, None
                    height: box_top.height + box_bottom.height
                    focus_behavior: True
                    ripple_behavior: True
                    pos_hint: {"center_x": .5, "center_y": .4}

                    MDBoxLayout:
                        id: box_top
                        adaptive_height: True
                        padding: "10dp", 0, 0, "10dp"

                        MDLabel:
                            text: "Grupo A - 21/11 13h"
                            adaptive_height: True
                            pos_hint: {"center_y": .5}
                            theme_text_color: "Primary"

                    MDSeparator:

                    MDBoxLayout:
                        id: box_middle
                        spacing: "20dp"
                        adaptive_height: True

                        FitImage:
                            source: "assets/images/GrupoA/catar/catar.png"
                            size_hint: None, None
                            width: dp(64)
                            height: dp(64) #text_box.height
                        MDLabel:
                            text: "0"
                        MDLabel:
                            text: "X"
                            font_size: "15"
                            bold: True
                        MDLabel:
                            text: "0"
                        FitImage:
                            source: "assets/images/GrupoA/equador/equador.png"
                            size_hint: None, None
                            width: dp(64)
                            height: dp(64) #text_box.height

                    MDSeparator:

                    MDBoxLayout:
                        id: box_bottom
                        adaptive_height: True
                        padding: "10dp", 0, 0, 0

                        MDLabel:
                            text: "Al Bayt Stadium"
                            adaptive_height: True
                            pos_hint: {"center_y": .5}
                            theme_text_color: "Primary"