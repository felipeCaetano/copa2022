<Squad@SmartTileWithLabel>:
    size_hint: None, None
    width: "64dp"
    height: "64dp"

<Game@MDGridLayout>:
    cols: 3
    adaptive_height: True
    adaptive_width: True
    spacing: dp(4)
    pos_hint: {'center_x': .5, 'center_y': .5}
    md_bg_color: 1,.3,.4,1
    src_sqd1: ""
    src_sqd2: ""
    time: ""
    team1: ""
    team2: ""
    Squad:
        padding: 0, 0, 10, 0
        source: root.src_sqd1
        text: root.team1
    MDBoxLayout:
        md_bg_color: .1,.2,.3,.4
        size_hint_x: None
        width: "60dp"
        MDLabel:
            text: root.time
            halign: "center"
    Squad:
        padding: 10, 0, 0, 0
        source: root.src_sqd2
        text: root.team2

<Day@MDBoxLayout>:
    orientation: "vertical"
    spacing: 5
    padding: 0, 0, 0, 5
    grupo: ""
    date: ""
    m1_team1: ""
    m1_team2: ""
    m2_team1: ""
    m2_team2: ""
    m1_flag1: ""
    m1_flag2: ""
    m2_flag1: ""
    m2_flag2: ""
    m1_time: ""
    m2_time: ""
    MDLabel:
        text: root.grupo
        halign: "center"
    MDLabel:
        text: root.date
        halign: "center"
        font_style: "Overline"
    Game:
        src_sqd1: root.m1_flag1
        src_sqd2: root.m1_flag2
        time: root.m1_time
        team1: root.m1_team1
        team2: root.m1_team2
    Game:
        src_sqd1: root.m2_flag1
        src_sqd2: root.m2_flag2
        time: root.m2_time
        team1: root.m2_team1
        team2: root.m2_team2

