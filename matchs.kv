#:import get_color_from_hex kivy.utils.get_color_from_hex

#:set text_color get_color_from_hex("#1087c3")
#:set focus_color get_color_from_hex("#e7e4c0")
#:set ripple_color get_color_from_hex("#c5bdd2")
#:set bg_color get_color_from_hex("#f0f0e7")
#:set selected_color get_color_from_hex("#63bddf")
#:set accent_color get_color_from_hex("#7b133d")

<Matchs>:
    #md_bg_color: bg_color
    MDTabs:
        id: tabs
        padding: dp(0),dp(60),dp(0),dp(0)
        on_tab_switch: app.on_tab_switch(*args)
        GameTab:
            title: '1ª Rodada'
        GameTab:
            title: '2ª Rodada'
        GameTab:
            title: '3ª Rodada'


<GameCard@MDCard>:
    current_color: app.theme_cls.accent_light
    grupo_text: ""
    time1: ""
    flag1: ""
    time2: ""
    flag2: ""
    stadium: ""
    current_match: False

    orientation: "vertical"
    size_hint: .5, None
    height: box_top.height + box_bottom.height
    padding: 0,10,0,10
    focus_behavior: True
    ripple_behavior: True
    pos_hint: {"center_x": .5, "center_y": .4}
    md_bg_color:root.current_color if root.current_match else bg_color
    unfocus_color: root.current_color if root.current_match else bg_color
    focus_color: selected_color

    MDBoxLayout:
        id: box_top
        adaptive_height: True
        padding: "10dp", "60dp", 0, "0dp"

        MDLabel:
            text: root.grupo_text
            adaptive_height: True
            pos_hint: {"center_y": .5}
            theme_text_color: "Primary"

    MDSeparator:

    MDBoxLayout:
        id: box_middle
        spacing: "5dp"
        adaptive_height: True
        padding: "15dp", 0, "20dp", 0

        MDLabel:
            id: time1
            text:root.time1
            font_size: "10"
            bold: True
            halign: "right"
        FitImage:
            source: root.flag1
            size_hint: None, None
            width: dp(64)
            height: dp(64) #text_box.height
        MDBoxLayout:
            spacing: "5dp"
            padding: "15dp", 10, "15dp", 10
            size_hint_x: None
            width: "65dp"
            MDLabel:
                halign: 'left'
                text: "0"
            MDLabel:
                halign: "center"
                text: "X"
                font_size: "12"
                bold: True
            MDLabel:
                halign: "right"
                text: "0"
        FitImage:
            source: root.flag2
            size_hint: None, None
            width: dp(64)
            height: dp(64)
        MDLabel:
            id: time2
            text: root.time2
            font_size: "10"
            bold: True

    MDSeparator:

    MDBoxLayout:
        id: box_bottom
        adaptive_height: True
        padding: "10dp", 0, 0, 0

        MDLabel:
            text: root.stadium
            adaptive_height: True
            pos_hint: {"center_y": .5}
            theme_text_color: "Primary"
            font_size: "12"

<GameTab>
    ScrollView:
        MDList:
            padding: 0, "30dp", 0, "0dp"
            spacing: "20dp"
            id: cards