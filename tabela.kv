<Tabela>:
    name: 'results'
    MDBoxLayout:
        orientation: "vertical"

        MDTabs:
            padding: 0,60,0,0
            id: tabs
            on_tab_switch: app.on_tab_switch(*args)

<TeamContainer>:
    id: container
    size_hint_x: None
    width: 150
    orientation: 'vertical'
    MDGridLayout:
        cols: 7
        rows: 2
        MDLabel:
            text: "Pts"
            font_size: 12
            font_style: 'Body1'
        MDLabel:
            text: "V"
            font_size: 12
            font_style: 'Body1'
        MDLabel:
            text: "E"
            font_size: 12
            font_style: 'Body1'
        MDLabel:
            text: "D"
            font_size: 12
            font_style: 'Body1'
        MDLabel:
            text: "GP"
            font_size: 12
            font_style: 'Body1'
        MDLabel:
            text: "GC"
            font_size: 12
            font_style: 'Body1'
        MDLabel:
            text: "SG"
            font_size: 12
            font_style: 'Body1'
        MDLabel:
            id: pts
            text: "0"
            font_size: 12
            font_style: 'Body1'
        MDLabel:
            id: v
            text: "0"
            font_size: 12
            font_style: 'Body1'
        MDLabel:
            id: e
