            text: "0"
            font_size: 12
            font_style: 'Body1'

<Tab>
    MDList:
        OneLineAvatarIconListItem:
            id: time1
            text: "Catar"
            on_size:
                self.ids._right_container.width = container1.width
                self.ids._right_container.x = container1.width
            on_release: app.show_team(self.text)
            ImageLeftWidget:
                id: flag1
                source: "assets/images/grupoA/catar.png"
            TeamContainer:
                id: container1

