<MySwiper@MDSwiperItem>
    text: ""
    source: ""
    RelativeLayout:

        FitImage:
            source: root.source #
            radius: [20,]

        MDBoxLayout:
            adaptive_height: True
            spacing: "12dp"

            MagicButton:
                id: icon
                icon: "stadium"
                user_font_size: "56sp"
                opposite_colors: True

            MDLabel:
                text: root.text
                font_style: "H5"
                size_hint_y: None
                height: self.texture_size[1]
                pos_hint: {"center_y": .5}
                opposite_colors: True

